! resolution & colors
Xft.dpi: 82 
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

URxvt*geometry: 120x40
URxvt*depth: 32
!URxvt*background: rgba:0000/0000/0000/dddd
URxvt*internalBorder: 26

!URxvt*foreground: #ffffff
URxvt*fading: 40

URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt*termName: rxvt-256color
URxvt.urgentOnBell: true

!-------------------------------------------------------------------------------
! fonts
URxvt*font: xft:DejaVu Sans Mono for Powerline:size=11

!-------------------------------------------------------------------------------
URxvt*saveLines: 10000
URxvt*scrollBar: false

URxvt*cursorColor: white
URxvt*cursorColor2: #aaaaaa

! special
*.foreground:   #f2f2f2
*.background:   #1c1b1a
*.cursorColor:  #aaaaaa

! black
*.color0:       #141413
*.color8:       #000000

! red
*.color1:       #793C45
*.color9:       #793C45

! green
*.color2:       #537200
*.color10:      #537200

! yellow
*.color3:       #D48B1E
*.color11:      #D48B1E

! blue
*.color4:       #477A9C
*.color12:      #477A9C

! magenta
*.color5:       #B1526C
*.color13:      #B1526C

! cyan
*.color6:       #559B71
*.color14:      #559B71

! white
*.color7:       #c9cec3
*.color15:      #ffffff
